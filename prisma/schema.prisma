generator client {
  provider = "prisma-client-js"
  output   = "../src/client/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id          String    @id @default(uuid())
  title       String
  img         String
  slug        String    @unique
  description String
  views       Int       @default(0)
  content     String
  createdAt   DateTime  @default(now())
  Comment     Comment[]

  @@index([id, slug])
}

model Project {
  id         String   @id @default(uuid())
  title      String
  decription String
  link       String
  techStack  String[]
  createdAt  DateTime @default(now())
  updateAt   DateTime @updatedAt
}

model Comment {
  id          String   @id @default(uuid())
  userClerkId String
  userImg     String
  user        String
  blogPost    BlogPost @relation(fields: [blogPostId], references: [id])
  blogPostId  String
  content     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Contact {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String
  query     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
