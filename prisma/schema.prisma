generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id          String   @id @default(uuid())
  title       String
  img         String
  slug        String   @unique
  description String
  content     String
  createdAt   DateTime @default(now())

  @@index([id, slug])
}

model Project {
  id         String   @id @default(uuid())
  title      String
  decription String
  link       String
  techStack  String[]
}
